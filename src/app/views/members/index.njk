{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
    <a href="/members/create">Novo</a>

       <table width="100%" >
           <thead>
               <tr>
                   <th>Membro</th>
                   <th>Email</th>
                   <th>Altura(Cm)</th>
                   <th>Peso(Kg)</th>
                   <th>Ação</th>
               </tr>
           </thead>
           <tbody>
               {% for member in members %}
                    <tr>
                        <td>
                            <span style='background-image: url({{member.avatar_url}})'></span>
                        {{member.name}}
                        </td>
                        <td>{{member.email}}</td>
                        <td>{{member.height}}</td>
                        <td>{{member.weight}}</td>
                        <td><a href="/members/{{member.id}}">ver</a></td>
                    </tr>
               {% endfor %}
           </tbody>
       </table>
    </div>
{% endblock content %}